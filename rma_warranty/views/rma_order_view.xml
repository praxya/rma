<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_rma_form" model="ir.ui.view">
            <field name="name">rma.order.form</field>
            <field name="model">rma.order</field>
            <field name="inherit_id" ref="rma.view_rma_form"/>
            <field name="arch" type="xml">
                <xpath
                        expr="//notebook/page[@name='lines']/field[@name='rma_line_ids']/tree/field[@name='operation_id']"
                        position="after">
                    <field name="warranty_state"/>
                    <field name="limit"
                           attrs="{'invisible':[('warranty_state', '=', 'undefined')]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_rma_supplier_form" model="ir.ui.view">
            <field name="name">rma.order.supplier.form</field>
            <field name="model">rma.order</field>
            <field name="inherit_id" ref="rma.view_rma_supplier_form"/>
            <field name="arch" type="xml">
                <xpath
                        expr="//notebook/page[@name='lines']/field[@name='rma_line_ids']/tree/field[@name='operation_id']"
                        position="after">
                    <field name="warranty_state"/>
                    <field name="limit"
                           attrs="{'invisible':[('warranty_state', '=', 'undefined')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
