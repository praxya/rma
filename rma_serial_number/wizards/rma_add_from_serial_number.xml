<?xml version="1.0" encoding="utf-8"?>

<openerp>
  <data>
    <record id="view_rma_add_from_serial_number_form" model="ir.ui.view">
        <field name="name">rma.add.from.serial.number.form</field>
        <field name="model">rma.add.from.serial.number</field>
        <field name="arch" type="xml">
            <form string="Serial Number">
                <group name="serial_number">
                    <field name="product_id"
                      options="{'no_create': True}"/>
                    <field name="serial_number_id"
                      options="{'no_create': True}"/>
                    <field name="rma_type" invisible="1"/>
                </group>
                <footer>
                    <button
                            string="Confirm"
                            name="search_invoice_serial_number" type="object"
                            class="oe_highlight"/>
                    or
                    <button name="action_cancel"
                            string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rma_add_from_serial_number" model="ir.actions.act_window">
        <field name="name">Add From Serial Number</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rma.add.from.serial.number</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_rma_add_from_serial_number_form"/>
        <field name="groups_id" eval="[(4, ref('rma.group_rma_customer_user')), (4, ref('rma.group_rma_customer_user'))]"/>
    </record>

  </data>
</openerp>
